<div class="container">
    <h2>Loyihalar</h2>
    <table class="table table-striped table-centered mb-0">
        <thead>
            <tr>
                <th>Rasm</th>
                <th>Turi</th> 
                <th>Nomi</th>
                <th>Tahrirlash</th> 
            </tr>
        </thead>
        <tbody>
            <% for (let item of projects) { %>
            <tr>
                <td class="table-user"> 
                   
                    <img src="/uploads/projects/<%=item.file[0]%>"  alt="table-user" class="me-2 rounded" />
        
                </td>
                <td><%= item.name.uz %> | <%= item.name.ru %> | <%= item.name.en %></td>
                <td><%= item.title.uz %> | <%= item.title.ru %> | <%= item.title.en %></td>
                <td class="table-action">
                    <a href="<%=`/projects/${item._id}`%>" class="action-icon"> <i class="mdi mdi-pencil"></i></a>
                <form method="POST" class="hidden-r" action="<%=`/projects/delete/${item._id}?_method=DELETE`%>">
                        <button type="submit">
                           <i class="mdi mdi-delete"></i>
                        </button>
                </form>
                </td>
            </tr> 
            <%}%> 
        </tbody>
    </table> 
</div>