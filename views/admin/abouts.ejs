<div class="container">
  <h2>Biz haqimizda</h2>
  <table class="table table-striped table-centered mb-0">
    <thead>
      <tr>
        <th>Rasm</th>
        <th>Sarlavha</th>
        <th>Batafsil ma'lumot</th>

        <th>Tahrirlash</th>
      </tr>
    </thead>
    <tbody>
      <% for (let item of abouts) { %>
      <tr>
        <td>
          <img
            class="img-fluid rounded"
            src="/uploads/about/<%= item.image %>"
            alt="Biz haqimizda"
          />
        </td>
        <td><%= item.title %></td>
        <td><%= item.description %></td>
        <td class="table-action">
          <a href="<%=`/about/${item._id}`%>" class="action-icon">
            <i class="mdi mdi-pencil"></i
          ></a>
          <form
            method="POST"
            class="hidden-r"
            action="<%=`/about/delete/${item._id}?_method=DELETE`%>"
          >
            <button type="submit">
              <i class="mdi mdi-delete"></i>
            </button>
          </form>
        </td>
      </tr>
      <%}%>
    </tbody>
  </table>
</div>
