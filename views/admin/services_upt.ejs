<h1>Qo'shiqlarni tahrirlash</h1>

<div class="container mt-3 mb-3">
  <form
    method="POST"
    action="<%=`/audio/${result._id}?_method=PUT`%>"
    class="needs-validation"
    novalidate
  >
    <!-- Loyihaning turi model name -->
    <div class="mb-3">
      <label class="form-label" for="validationCustom01"
        >Qo'shiqning nomini yozing</label
      >
      <input
        type="text"
        class="form-control"
        id="validationCustom01"
        placeholder="Qo'shiqning nomini yozing"
        name="title"
        value="<%= result.title %>"
        required
      />
      <div class="invalid-feedback">Qo'shiqni nomi yozilmagan</div>
      <div class="valid-feedback">Yaxshi</div>
    </div>
    <!-- Loyihaning turi model name -->
    <div class="mb-3">
      <label class="form-label" for="validationCustom01"
        >Artistni yozing</label
      >
      <input
        type="text"
        class="form-control"
        id="validationCustom01"
        placeholder="Artistni yozing"
        name="name"
        value="<%= result.name %>"
        required
      />
      <div class="invalid-feedback">Artist yozilmagan</div>
      <div class="valid-feedback">Yaxshi</div>
    </div>

    <button class="btn btn-primary" type="submit">Saqlash</button>
  </form>

  <form
    method="POST"
    action="<%=`/audio/update/${result._id}?_method=PUT`%>"
    ref="uploadForm"
    encType="multipart/form-data"
    class="col-md-4 mt-3"
  >
    <div class="mb-3">
      <label>Audioni tahrirlash</label>
      <br />
      <audio controls>
        <source src="/uploads/audios/<%= result.audio %>" />
      </audio>
    </div>
    <input class="form-control" name="audio" type="file" /> <br />

    <button type="submit" class="btn btn-primary col-md-5 mt-3">Saqlash</button>
  </form>
</div>
