<div class="container">
  <h1>Jamoa a'zolari haqida umumiy</h1>
  <% for (let item of teamsAbout) { %>
  <p><%= item.description %></p>
  <a href="<%=`/teamAbout/teamupt/${item._id}`%>" class="action-icon">
    <i class="mdi mdi-pencil fs-3"></i>Tahrirlash</a
  >
  <br />
  <br />
  <form
    method="POST"
    class="hidden-r"
    action="<%=`/teamAbout/delete/${item._id}?_method=DELETE`%>"
  >
    <button type="submit">
      <i class="mdi mdi-delete"></i>
    </button>
  </form>

  <%}%>
  <h1>Jamoa a'zolari</h1>
  <table class="table table-striped table-centered mb-0">
    <thead>
      <tr>
        <th>Rasm</th>
        <th>Kasb</th>
        <th>Ism</th>
        <th>Tahrirlash</th>
      </tr>
    </thead>
    <tbody>
      <% for (let item of teams) { %>
      <tr>
        <td class="table-user">
          <img
            src="/uploads/team/<%=item.image %>"
            alt="table-user"
            class="img-fluid rounded"
            width="200px"
            height="200px"
          />
        </td>
        <td><%= item.job %></td>
        <td><%= item.description %></td>
        <td class="table-action">
          <a href="<%=`/team/teamupt/${item._id}`%>" class="action-icon">
            <i class="mdi mdi-pencil"></i
          ></a>
          <form
            method="POST"
            class="hidden-r"
            action="<%=`/team/delete/${item._id}?_method=DELETE`%>"
          >
            <button type="submit">
              <i class="mdi mdi-delete"></i>
            </button>
          </form>
        </td>
      </tr>
      <%}%>
    </tbody>
  </table>
</div>
