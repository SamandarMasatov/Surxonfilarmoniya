
<div class="container">
    <h1>Jamoa a'zolari</h1>
    <table class="table table-striped table-centered mb-0">
        <thead>
            <tr>
                <th>Rasm</th> 
                <th>Ism</th> 
                <th>Kasb</th>
                <th>Tahrirlash</th> 
            </tr>
        </thead>
        <tbody>
            <% for (let item of teams) { %>
            <tr>
                <td class="table-user"> 
                   
                    <img src="/uploads/team/<%=item.image %>"  alt="table-user" class="me-2 rounded" />
        
                </td>
                <td><%= item.name.uz %></td>
                <td><%= item.job.uz %></td>
                <td class="table-action">
                    <a href="<%=`/team/teamupt/${item._id}`%>" class="action-icon"> <i class="mdi mdi-pencil"></i></a>
                <form method="POST" class="hidden-r" action="<%=`/team/delete/${item._id}?_method=DELETE`%>">
                        <button type="submit">
                           <i class="mdi mdi-delete"></i>
                        </button>
                </form>
                </td>
            </tr> 
            <%}%> 
        </tbody>
    </table> 
</div>