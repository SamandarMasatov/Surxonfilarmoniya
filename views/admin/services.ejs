<div class="container">
  <h2>Bosh sahifadagi qushiq</h2>
  <table class="table table-striped table-centered mb-0">
    <thead>
      <tr>
        <th>Artist</th>
        <th>Qo'shiq noma</th>
        <th>Qo'shiq</th>
        <th>Tahrirlash</th>
      </tr>
    </thead>
    <tbody>
      <% for (let item of audios) { %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.title %></td>
        <td>
          <audio controls>
            <source src="/uploads/audios/<%= item.audio %>" />
          </audio>
        </td>

        <td class="table-action">
          <a href="<%=`/audio/${item._id}`%>" class="action-icon">
            <i class="mdi mdi-pencil"></i
          ></a>
          <form
            method="POST"
            class="hidden-r"
            action="<%=`/audio/delete/${item._id}?_method=DELETE`%>"
          >
            <button type="submit">
              <i class="mdi mdi-delete"></i>
            </button>
          </form>
        </td>
      </tr>
      <%}%>
    </tbody>
  </table>
</div>
