<section id="creativity">
  <div class="container">
    <h1 class="text-center my-5">Ijoddan namunalar</h1>
    <!-- 1 -->
    <% for (let item of audios) { %>
    <div class="row pt-3" data-aos="zoom-in" data-aos-duration="3500">
      <div class="col-8 mb-3 col-lg-3 d-flex align-items-center">
        <div>
          <b><%= item.title %></b>
          
        </div>
        <audio controls id="mpn1" class="d-none">
          <source src="/uploads/audios/<%= item.audio %>" />
        </audio>
      </div>
      <div class="col-5 mb-3 d-none d-lg-block d-flex align-items-center">
        <div class="d-flex w-100 h-100 align-items-center">
          <div class="creativity-text">
            <b class="ps-3"><%= item.name %></b>
          </div>
        </div>
      </div>
      <div
        class="text-red mb-3 col-md-2 d-none d-md-flex align-items-center justify-content-center"
      >
        <i class="fa-regular fa-clock me-3"></i>
        <span class="text-black">
          <span id="time-minute1">00</span> :
          <span id="time-second1">00</span>
        </span>
        <script>
          const mpn1 = document.querySelector("#mpn1");
          const timeMinute1 = document.querySelector("#time-minute1");
          const timeSecond1 = document.querySelector("#time-second1");
          mpn1.onloadedmetadata = function () {
            let fullTime = parseInt(mpn1.duration);
            timeMinute1.innerHTML =
              fullTime / 60 < 10
                ? `0${Math.floor(fullTime / 60)}`
                : Math.floor(fullTime / 60);
            timeSecond1.innerHTML =
              fullTime % 60 < 10 ? `0${fullTime % 60}` : fullTime % 60;
          };
        </script>
      </div>
      <div
        class="col-2 mb-3 d-flex align-items-center justify-content-center position-relative"
      >
        <button
          id="palay1"
          onclick="mpPlay(1)"
          class="play outline-none rounded-circle d-flex align-items-center justify-content-center bg-transparent right-0"
        >
          <i class="fa-solid fa-play ms-1"></i>
          <!-- <i class="fa-solid fa-pause"></i> -->
        </button>
      </div>
      <div
        id="line1"
        class="line col-12 px-0 py-0 my-0 position-relative rounded"
      >
        <div
          id="line-in1"
          class="line-in position-absolute bottom-0 left-0 h-100 rounded"
        ></div>
      </div>
    </div>
    <% } %>
  </div>
</section>
