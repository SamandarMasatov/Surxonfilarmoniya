
<style>
  .clamp {
    display: -webkit-box;
    -webkit-line-clamp: 6;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .championship-bg img {
    width: 100%;
    position: relative;
    top: 5px;
  }
  
  .championship_wrap {
    background-color: #e8d3b6;
    padding: 100px 0;
  }
  h5 {
    font-family: "Montserrat", sans-serif;
    text-transform: uppercase;
    text-align: center;
    line-height: 110%;
    color: #bd8d4c;
    font-style: normal;
    margin-bottom: 15px;
  }
  .news_title {
    margin: 25px auto;
    font-family: "Spectral SC", serif;
    text-align: center;
    font-size: 3em;
    font-weight: 700;
    line-height: 1.06;
  }
  
  /* News */
  .row_n {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    width: 90%;
    margin: 0 auto;
  }
  
  .column {
    width: calc(33.33% - 20px);
    margin-bottom: 20px;
    display: flex;
    font-family: "Gilroy";
    flex-direction: column;
    align-items: center;
  }
  
  .column img {
    width: 100%;
    height: 300px;
    object-fit: cover;
    display: block;
    border-radius: 5px;
    cursor: pointer;
  }
  
  .column h2 {
    font-size: 1.2rem;
    margin: 10px 0;
    text-align: center;
    cursor: pointer;
  }
  .column h2:hover {
    color: #bd8d4c;
  }
  .column span {
    font-size: 1rem;
    margin: 5px 0;
    cursor: pointer;
  }
  .column span:hover {
    color: #bd8d4c;
  }
  .column > * {
    font-size: 1rem;
    margin: 5px 0;
    cursor: pointer;
    display: -webkit-box;
    -webkit-line-clamp: 6;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  @media screen and (max-width: 768px) {
    .column {
      width: 100%;
    }
  }
  
  @media (max-width: 1024px) {
    .championship_wrap {
      position: relative;
      padding: 60px 0;
    }
    .container {
      width: 100%;
    }
    h1 {
      font-size: 2em;
    }
    .championship-bg {
      position: relative;
      top: 5px;
      z-index: 5;
    }
  }
  </style>
  


<!-- main start -->
<main class="position-relative overflow-hidden">
  <div id="carusel" class="carusel-home h-100 position-absolute top-0 d-flex">
    <div class="item w-100 h-100 bt-info">
      <img src="./img/home1.jfif" class="w-100 h-100" />
    </div>
    <div class="item w-100 h-100 bt-info">
      <img src="./img/home2.jfif" class="w-100 h-100" />
    </div>
    <div class="item w-100 h-100 bt-info">
      <img src="./img/home3.jfif" class="w-100 h-100" />
    </div>
  </div>
  <div class="audio_play position-absolute w-100 py-2 bottom-0">
    <% for (let item of home) { %>
    <div class="container text-white">
      <div class="row py-2">
        <div class="col-3 d-none d-lg-block">
          <div class="name"><%= item.name %></div>
        </div>
        <div
          class="col-12 col-lg-9 d-flex justify-content-between align-items-center"
        >
          <audio controls id="mp3" class="d-none">
            <source src="/uploads/home/<%= item.audio %>" />
          </audio>
          <button
            onclick="prev()"
            class="border border-0 outline-none text-white d-flex align-items-center justify-content-center"
          >
            <i class="fa-solid fa-backward"></i>
          </button>
          <button
            onclick="play()"
            id="home-audio-play"
            class="audio-btn border border-0 outline-none text-white d-flex align-items-center justify-content-center"
          >
            <i class="fa-solid fa-play"></i>
          </button>
          <button
            onclick="next()"
            class="border border-0 outline-none text-white d-flex align-items-center justify-content-center"
          >
            <i class="fa-solid fa-forward"></i>
          </button>
          <div id="home-line" class="line w-75 rounded position-relative">
            <div id="home-line-in" class="line-in h-100 rounded"></div>
            <div
              class="time-mouse position-absolute align-items-center justify-content-center"
            >
              <span id="time-mouse-minute">00</span>:<span
                id="time-mouse-second"
                >00</span
              >
            </div>
          </div>
          <div class="time">
            <span id="home-minute">00</span>:<span id="home-second">00</span>
          </div>
          <i class="fa-solid fa-music d-none d-xl-block"></i>
        </div>
      </div>
    </div>
    <%}%>
  </div>
</main>
<!-- main end -->

